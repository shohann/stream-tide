{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src/",
    "outDir": "./dist/",
    "typeRoots" : ["./src/types", "./node_modules/@types"] 
  },
  "include": ["src/**/*", "app.ts", "src/server.ts"],
  "exclude": ["node_modules", "dist"]
}
