{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src/",                                 
    "outDir": "./dist/", 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
